<div class="row">
    <div class="center">
        <a class="waves-effect waves-light btn"><%= button_to 'Voeg grasspriet toe', new_blade_path, method: :get %></a>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @blades.each do |blade| %>
        <div class="row">
            <div class="col s4 push-s4">
                <div class="card green lighten-4">
                    <div class="card-image">
                        <% if blade.image.attached? %>
                        <%= image_tag(blade.image, size:"400x400") %>
                        <% else %>
                        <p>image</p>
                        <% end %>
                    </div>
                    <div class="center">
                    <span class="card-title"><%= link_to blade.name, blade %></span>
                    <span class="card-title">
                        <p>â‚¬ <%= blade.price %></p>
                    </span>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </tbody>
</table>